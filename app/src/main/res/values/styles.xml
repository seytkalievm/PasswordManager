<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeaderText">
        <item name="android:fontFamily">@font/assistant_bold</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="WideButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/assistant_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InputText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:fontFamily">@font/assistant_semibold</item>
        <item name="android:textColorHint">#757575</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>
</resources>