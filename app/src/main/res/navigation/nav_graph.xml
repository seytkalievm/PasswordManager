<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/passcodeFragment"
        android:name="com.seytkalievm.passwordmanager.ui.auth.login.PasscodeFragment"
        android:label="passcode_fragment"
        tools:layout="@layout/passcode_fragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.seytkalievm.passwordmanager.ui.auth.login.LogInFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_createPasscodeFragment"
            app:destination="@id/createPasscodeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.seytkalievm.passwordmanager.ui.auth.login.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_createPasscodeFragment"
            app:destination="@id/createPasscodeFragment" />
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/createPasscodeFragment"
        android:name="com.seytkalievm.passwordmanager.ui.auth.login.CreatePasscodeFragment"
        android:label="fragment_create_passcode"
        tools:layout="@layout/fragment_create_passcode" >
        <action
            android:id="@+id/action_createPasscodeFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.seytkalievm.passwordmanager.ui.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>