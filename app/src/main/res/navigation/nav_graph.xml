<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/startPageFragment">
    <fragment
        android:id="@+id/passcodeFragment"
        android:name="com.seytkalievm.passwordmanager.ui.auth.passcode.PasscodeFragment"
        android:label="passcode_fragment"
        tools:layout="@layout/fragment_passcode" >
        <action
            android:id="@+id/action_passcodeFragment_to_sessionActivity"
            app:destination="@id/sessionActivity" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.seytkalievm.passwordmanager.ui.auth.login.LogInFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_createPasscodeFragment"
            app:destination="@id/createPasscodeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.seytkalievm.passwordmanager.ui.auth.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_createPasscodeFragment"
            app:destination="@id/createPasscodeFragment" />
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/createPasscodeFragment"
        android:name="com.seytkalievm.passwordmanager.ui.auth.passcode.CreatePasscodeFragment"
        android:label="fragment_create_passcode"
        tools:layout="@layout/fragment_create_passcode" >
        <action
            android:id="@+id/action_createPasscodeFragment_to_sessionActivity"
            app:destination="@id/sessionActivity" />
    </fragment>
    <fragment
        android:id="@+id/startPageFragment"
        android:name="com.seytkalievm.passwordmanager.ui.auth.StartPageFragment"
        android:label="fragment_start_page"
        tools:layout="@layout/fragment_start_page" >
        <action
            android:id="@+id/action_startPageFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/startPageFragment" />
        <action
            android:id="@+id/action_startPageFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/startPageFragment" />
    </fragment>
    <activity
        android:id="@+id/sessionActivity"
        android:name="com.seytkalievm.passwordmanager.ui.session.main.SessionActivity"
        android:label="session_activity"
        tools:layout="@layout/activity_session" />
</navigation>